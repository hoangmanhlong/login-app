<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="fragment"
            type="com.example.loginapp.view.fragment.checkout.CheckoutInfoFragment" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1000"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/favorite_btn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_8sdp"
                android:background="@color/gray_1000"                android:contentDescription="@null"
                android:onClick="@{() -> fragment.onNavigateUp()}"
                android:src="@drawable/arrow___left_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_29sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_local" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_card" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/ellipse_15" />

                        <ImageView
                            android:layout_width="@dimen/_23sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:contentDescription="@null"
                            android:src="@drawable/check__5__1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Billing address"
                        android:textColor="@color/black_100"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="Full name"
                        android:textColor="@color/gray_700"
                        android:textSize="@dimen/_10ssp" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        app:dividerColor="@color/gray_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="Address"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        app:dividerColor="@color/gray_600" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Province"
                                android:textColor="@color/gray_700"
                                android:textSize="@dimen/_10ssp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:background="@android:color/transparent"
                                    android:textSize="@dimen/_12ssp" />

                                <ImageButton
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_21sdp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/arrow___down_2" />

                            </LinearLayout>

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_8sdp"
                                app:dividerColor="@color/gray_600" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Postal Code"
                                android:textColor="@color/gray_500"
                                android:textSize="@dimen/_10ssp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:background="@android:color/transparent"
                                android:textSize="@dimen/_12ssp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_8sdp"
                                app:dividerColor="@color/gray_600" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="Country"
                        android:textColor="@color/gray_700"
                        android:textSize="@dimen/_10ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/_12ssp" />

                        <ImageButton
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/arrow___down_2" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        app:dividerColor="@color/gray_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:text="Shipping Options"
                        android:textColor="@color/gray_700"
                        android:textSize="@dimen/_10ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/_12ssp" />

                        <ImageButton
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_21sdp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/arrow___down_2" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_8sdp"
                        app:dividerColor="@color/gray_600" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp">

                        <CheckBox
                            android:id="@+id/saveAddressCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save details for future billing addresses"
                            android:textColor="@color/gray_700"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/saveAddressCheckBox"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button
                        android:id="@+id/buy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Proceed to Payment"
                        android:onClick="@{() -> fragment.onPaymentOptionScreen()}"
                        app:elevation="@dimen/_10sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
