<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="fragment"
            type="com.example.loginapp.view.fragments.checkout.OrderSuccessFragment" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1000"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <Button
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> fragment.onNavigateUp()}"
                app:icon="@drawable/ic_arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:fontFamily="@font/montserrat_regular"
                android:includeFontPadding="false"
                android:text="@string/checkout"
                android:textColor="@color/black_100"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_local" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_card_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ellipse_dark" />

                <ImageView
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_check_dark" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_checklist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Order Success"
                    android:textColor="@color/black_100"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:paddingHorizontal="@dimen/_30sdp"
                    android:text="Thank you for purchasing. Your order will be shipped within 3-5 business days"
                    android:textAlignment="center"
                    android:textColor="@color/gray_800"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:backgroundTint="@android:color/background_dark"
            android:fontFamily="@font/poppins_bold"
            android:onClick="@{() -> fragment.onBackHomeScreen()}"
            android:text="Back to Shopping"
            app:elevation="@dimen/_10sdp" />
    </LinearLayout>
</layout>
