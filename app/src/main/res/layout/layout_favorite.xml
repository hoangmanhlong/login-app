<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.example.loginapp.model.entity.Product" />
    </data>
    <LinearLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/checkbox"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toTopOf="@id/checkbox"
            app:strokeWidth="0dp">

            <ImageView
                imgUrl="@{product.thumbnail}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@drawable/iphone9" />
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:textSize="16sp"
                android:id="@+id/productNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/averia_gruesa_libre_regular"
                android:includeFontPadding="false"
                android:maxWidth="@dimen/_240sdp"
                android:singleLine="true"
                android:text="@{product.title}"
                android:textStyle="bold"
                tools:text="Iphone 14 apple" />

            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:fontFamily="@font/averia_gruesa_libre_regular"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{product.description}"
                tools:text="Iphone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        bindRatingRounded="@{product.rating}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/averia_gruesa_libre_regular"
                        android:includeFontPadding="false"
                        tools:text="4.5" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_star_rate" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/averia_gruesa_libre_regular"
                    android:includeFontPadding="false"
                    android:text="@{@string/price_format(product.intToString())}"
                    tools:text="100$" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
