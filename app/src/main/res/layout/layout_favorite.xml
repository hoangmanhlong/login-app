<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.example.loginapp.model.entity.Product" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/checkbox"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            app:layout_constraintTop_toTopOf="@id/checkbox"
            app:strokeWidth="0dp">

            <ImageView
                imgUrl="@{product.thumbnail}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@drawable/iphone9" />
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:text="@{product.title}"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre_regular"
                android:maxLines="2"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hoang Long" />

            <TextView
                android:id="@+id/priceView"
                android:text="@{@string/price_format(product.intToString())}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/averia_gruesa_libre_regular"
                android:maxLines="2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="1000$" />

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_32sdp"
                app:layout_constraintBottom_toBottomOf="@id/priceView"
                app:layout_constraintTop_toTopOf="@id/priceView"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Buy now"
                android:textSize="10sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
