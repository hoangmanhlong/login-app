<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.example.loginapp.model.entity.Product" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_128sdp"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/md_theme_light_background"
        app:cardCornerRadius="@dimen/_8sdp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardElevation="@dimen/_2sdp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/product_image"
                    imgUrl="@{product.thumbnail}"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/iphone9" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/averia_gruesa_libre_regular"
                    android:includeFontPadding="false"
                    android:maxWidth="@dimen/_120sdp"
                    android:singleLine="true"
                    android:text="@{product.title}"
                    android:textStyle="bold"
                    tools:text="Iphone 14 apple max" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/productNameTextView">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            bindRatingRounded="@{product.rating}"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_14sdp"
                            android:fontFamily="@font/averia_gruesa_libre_regular"
                            android:includeFontPadding="false"
                            tools:text="4.5" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_star_rate" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/averia_gruesa_libre_regular"
                        android:includeFontPadding="false"
                        android:text="@{@string/price_format(product.intToString())}"
                        tools:text="100$" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
