<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="comment"
            type="com.example.loginapp.model.entity.Comment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/_8sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tvUserImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:contentDescription="@null"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="@id/moreButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/moreButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@{comment.user.username}"
            android:textColor="@color/black_100"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/moreButton"
            app:layout_constraintStart_toEndOf="@id/tvUserImage"
            app:layout_constraintTop_toTopOf="@id/moreButton"
            tools:text="Hoang Long" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@{comment.body}"
            android:textSize="13sp"
            android:textColor="@color/gray_500"
            app:layout_constraintTop_toBottomOf="@id/moreButton"
            tools:text="It is very good" />

        <Button
            android:id="@+id/moreButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_more_vert" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
