<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="openedFromCart"
            type="Boolean" />

        <variable
            name="selectVoucherVisible"
            type="Boolean" />

        <variable
            name="product"
            type="com.example.loginapp.model.entity.Product" />

        <variable
            name="fragment"
            type="com.example.loginapp.view.fragments.add_to_cart.AddProductToCartFragment" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="@dimen/_16sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <ImageView
                imgUrl="@{product.thumbnail}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@drawable/iphone9" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_regular"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="@{product.title}"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nike Air VaporMax Evoo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_regular"
            android:includeFontPadding="false"
            android:text="@{@string/price_format(product.intToString())}"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/product_image"
            app:layout_constraintTop_toBottomOf="@id/tvProductName"
            tools:text="1000$" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divide1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_image" />

        <Button
            android:id="@+id/btAdd"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/divide1" />

        <Button
            android:id="@+id/btRemove"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:textColor="@color/red"
            app:layout_constraintTop_toBottomOf="@id/btAdd"
            tools:text="Remove Product" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>



