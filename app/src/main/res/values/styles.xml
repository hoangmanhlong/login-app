<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="discount_image">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#152B36</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.LoginApp</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!--        <item name="windowSplashScreenAnimationDuration">200</item>-->
    </style>

    <style name="searchTextStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">#000</item>
        <item name="colorSurfaceVariant">#fff</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/gray_1000</item>
    </style>

</resources>